<Window x:Class="ReadToUnlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReadToUnlock" 
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        Foreground="White"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="ReadToUnlock" FontSize="72" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>
            <TextBlock Text="Click anywhere to begin reading practice" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,50"/>
            <Button Content="Start Reading" Width="200" Height="60" FontSize="24" Click="StartReading_Click"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button Content="Settings" Width="100" Height="30" Margin="0,0,10,0" Click="SettingsButton_Click"/>
            <Button Content="Exit" Width="100" Height="30" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>