<Window x:Class="ReadToUnlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReadToUnlock" 
        Height="450" 
        Width="800"
        Background="Black"
        Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Background="Black" Foreground="White">
            <MenuItem Header="File">
                <MenuItem Header="Settings" Click="SettingsMenu_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="ExitMenu_Click"/>
            </MenuItem>
        </Menu>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="ReadToUnlock" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="A reading practice application" FontSize="18" HorizontalAlignment="Center" Margin="0,10"/>
            <Button Content="Start Reading" Width="150" Height="40" Margin="0,20" Click="StartReading_Click"/>
        </StackPanel>
        
        <StatusBar Grid.Row="2" Background="Black" Foreground="White">
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>