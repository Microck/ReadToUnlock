<Window x:Class="ReadToUnlock.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug Information" 
        Height="600" 
        Width="800"
        Background="Black"
        Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Debug Information" FontSize="24" FontWeight="Bold" Margin="10"/>
        
        <ScrollViewer Grid.Row="1" Margin="10">
            <TextBox x:Name="DebugText" 
                     Background="Black" 
                     Foreground="White"
                     FontFamily="Consolas"
                     FontSize="12"
                     TextWrapping="Wrap"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"/>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Copy to Clipboard" Width="120" Height="30" Margin="5" Click="CopyToClipboard_Click"/>
            <Button Content="Close" Width="80" Height="30" Margin="5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>