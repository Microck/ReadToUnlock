<Window x:Class="ReadToUnlock.ReadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reading Practice" 
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        Foreground="White"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Reading Practice" FontSize="36" FontWeight="Bold"/>
        </StackPanel>
        
        <ScrollViewer Grid.Row="1" Margin="50" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock x:Name="PassageText" 
                          FontSize="24" 
                          TextWrapping="Wrap"
                          LineHeight="40"
                          TextAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Content="Start" Width="120" Height="40" Margin="10" Click="StartButton_Click"/>
            <Button Content="Next Passage" Width="120" Height="40" Margin="10" Click="NextButton_Click"/>
            <Button Content="Back to Menu" Width="120" Height="40" Margin="10" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>